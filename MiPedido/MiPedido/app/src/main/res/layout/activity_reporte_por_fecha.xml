<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportePorFecha"
    android:background="@color/color4"
    android:orientation="vertical">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar">

    </include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Vendedores :"
                android:textStyle="bold"/>
            <Spinner

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/spinnerVendedores"

                android:layout_weight="1" />
            <Button
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:onClick="OnClickFillVentas"
                android:backgroundTint="@color/color5"
                android:drawableTintMode="multiply"
                android:textColor="@color/white"
                android:text="Go"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="70dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/fechaInicio"
                android:onClick="onclickFechaInicio"
                android:background="@drawable/calendar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:id="@+id/txtInicio"
                android:textSize="16sp"
                android:text="Fecha Inicio"
                android:textStyle="bold"/>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/fechaFin"
                android:onClick="onclickFechaFin"
                android:background="@drawable/calendar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="16sp"
                android:id="@+id/txtFin"
                android:text="Fecha Fin"
                android:textStyle="bold"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:orientation="vertical"
            style="@style/alinea_abajo_reportefecha"
            android:layout_marginBottom="113dp"
            android:background="@color/white">

            <ListView

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/listaVentaPorFecha">

            </ListView>

        </LinearLayout>



        <LinearLayout
            style="@style/alinea_abajo_reportefecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:gravity="right|center"
                    android:textColor="@color/black"

                    android:text="Gasolina :"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="20sp"
                    android:gravity="right|center"
                    android:textColor="@color/black"
                    android:text="0$"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                >
                <TextView
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="Corte Total :"/>
                <TextView
                    android:id="@+id/total_reporte_fecha"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:text="0$"/>
            </LinearLayout>
            ยก
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
